{
  "name": "epcyp",
  "version": "1.4.1",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "yarn run gulp clean && yarn run gulp pug && yarn run webpack --mode=production",
    "watch": "yarn run webpack --watch --mode=development",
    "clean": "yarn run gulp clean",
    "start": "yarn run electron ./dist/main.js",
    "list": "yarn list --depth=0",
    "release:darwin": "yarn run build && yarn run electron-builder --mac",
    "release:linux": "yarn run build && yarn run gulp package:linux"
  },
  "build": {
    "appId": "com.electron.${name}",
    "artifactName": "${name}_${version}_${os}_${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "asar": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./src/img/icon/darwin/icon_1024x1024.icns",
      "darkModeSupport": true
    }
  },
  "author": "mrhorin",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "css-loader": "^4.3.0",
    "del": "^6.0.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.8.1",
    "electron-load-devtool": "^1.2.0",
    "file-loader": "^6.1.1",
    "gulp": "^4.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^4.0.1",
    "node-sass": "^4.14.1",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-notifier": "^1.8.0"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "electron-json-storage": "^4.1.6",
    "electron-store": "^6.0.1",
    "fix-path": "^3.0.0",
    "jscolor-picker": "^2.0.4",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "photonkit": "^0.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
